<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- HEADER: NAMA BARANG & STOK AKHIR (1 LINE) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvNamaBarang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nama Barang"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvStokAkhir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/tvSatuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gr"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginStart="2dp"/>
        </LinearLayout>

        <!-- DETAIL STOCK (COMPACT 1 LINE) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:background="#F5F5F5"
            android:padding="6dp">

            <!-- STOK KEMARIN -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“Š"
                android:textSize="11sp"
                android:textColor="#616161"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvStokAwal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="0.0"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#212121"/>

            <!-- BELANJA -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âž•"
                android:textSize="11sp"
                android:textColor="#4CAF50"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvTotalMasuk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="0.0"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"/>

            <!-- PEMAKAIAN -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âž–"
                android:textSize="11sp"
                android:textColor="#F44336"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvTotalKeluar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="0.0"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#F44336"/>

            <!-- EQUALS -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="="
                android:textSize="12sp"
                android:textColor="#616161"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvStokAkhirDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="0.0"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#2196F3"/>
        </LinearLayout>

        <!-- STOK FISIK (OPTIONAL - COMPACT) -->
        <LinearLayout
            android:id="@+id/layoutStokFisik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFF3E0"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹"
                android:textSize="11sp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/tvStokFisik"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fisik: 0.0"
                android:textSize="11sp"
                android:textColor="#FF9800"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš ï¸"
                android:textSize="11sp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/tvSelisih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Î” 0.0"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#F44336"/>
        </LinearLayout>

        <!-- HINT (KECIL) -->
        <TextView
            android:id="@+id/tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘† Tap untuk input"
            android:textSize="10sp"
            android:textColor="#BDBDBD"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
